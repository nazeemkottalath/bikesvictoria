---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Pricing",
    path: "/pricing",
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<header class="fixed top-0 left-0 w-full z-50 bg-white shadow-md">
  <nav class="container mx-auto flex items-center justify-between py-4 px-6">
    <!-- Logo Section -->
    <a href="/" class="flex items-center gap-2">
      <img src="/BikesVictoriaLogo.png" alt="Bikes Victoria Logo" class="h-8" />
      <span class="font-bold text-lg text-black">BikesVictoria</span>
    </a>

    <!-- Menu Section -->
    <ul class="hidden lg:flex items-center gap-6">
      {menuitems.map((item, index) => (
        <li key={index}>
          <a
            href={item.path}
            class="text-gray-600 hover:text-gray-900 font-medium"
          >
            {item.title}
          </a>
        </li>
      ))}
    </ul>

    <!-- Button Section -->
    <Link
      href="/contact"
      class="hidden lg:block bg-purple text-white font-bold hover:bg-darkPurple border-2 border-transparent px-6 py-2 rounded"
    >
      Book Now
    </Link>

    <!-- Mobile Menu Icon -->
    <div class="lg:hidden">
      <MenuIcon class="w-6 h-6 text-gray-800" />
    </div>
  </nav>
</header>

<!-- Prevent Content Overlap -->
<main class="pt-20">
  <!-- Page content here -->
</main>

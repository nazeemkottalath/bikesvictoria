<header class="fixed top-0 left-0 w-full z-50 bg-white shadow-md">
  <nav class="container mx-auto flex items-center justify-between py-4 px-6">
    <!-- Logo Section -->
    <a href="/" class="flex items-center gap-2">
      <img src="/BikesVictoriaLogo.png" alt="Bikes Victoria Logo" class="h-8" />
      <span class="font-bold text-lg text-black">BikesVictoria</span>
    </a>

    <!-- Mobile Menu Icon -->
    <div class="lg:hidden">
      <MenuIcon class="w-6 h-6 text-gray-800 cursor-pointer" />
    </div>

    <!-- Menu and Button Section (Desktop) -->
    <div class="hidden lg:flex items-center gap-6 ml-auto">
      <ul class="flex items-center gap-6">
        {menuitems.map((item, index) => (
          <li key={index}>
            <a
              href={item.path}
              class="text-gray-600 hover:text-gray-900 font-medium"
            >
              {item.title}
            </a>
          </li>
        ))}
      </ul>
      <Link
        href="/contact"
        class="bg-purple text-white font-bold hover:bg-darkPurple border-2 border-transparent px-6 py-2 rounded"
      >
        Book Now
      </Link>
    </div>

    <!-- Mobile Menu (Hidden by default) -->
    <div
      class="lg:hidden fixed top-20 left-0 w-full bg-white shadow-md hidden flex-col gap-4 p-6"
      id="mobileMenu"
    >
      <ul class="flex flex-col gap-4">
        {menuitems.map((item, index) => (
          <li key={index}>
            <a
              href={item.path}
              class="text-gray-600 hover:text-gray-900 font-medium"
            >
              {item.title}
            </a>
          </li>
        ))}
      </ul>
      <Link
        href="/contact"
        class="bg-purple text-white font-bold hover:bg-darkPurple border-2 border-transparent px-6 py-2 rounded block text-center"
      >
        Book Now
      </Link>
    </div>
  </nav>
</header>

<!-- Prevent Content Overlap -->
<main class="pt-24 lg:pt-20">
  <!-- Page content here -->
</main>

<!-- Mobile Menu Toggle Script -->
<script>
  const menuIcon = document.querySelector('.lg\\:hidden');
  const mobileMenu = document.getElementById('mobileMenu');

  menuIcon.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>

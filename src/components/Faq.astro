---
import { Icon } from "astro-icon/components";

const faqs = [
  {
    question: "What are your rental hours?",
    answer: "We are open 24/7 for bike rentals, providing flexibility for your schedule."
  },
  {
    question: "How much does it cost to rent a bike?",
    answer: "Our basic single-gear bikes cost $15 per day."
  },
  {
    question: "Where can I pick up and drop off the bike?",
    answer: "We offer free drop-off and pick-up in downtown Victoria and the cruise terminal."
  },
  {
    question: "Do I need to bring my own helmet?",
    answer: "Yes, please bring your own helmet for safety."
  }
];
---

<style>
  .faq-item {
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 0;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: bold;
    cursor: pointer;
    font-size: 1.125rem;
  }

  .faq-answer {
    margin-top: 0.5rem;
    color: #555;
    display: none;
  }

  .faq-item.open .faq-answer {
    display: block;
  }
</style>

<section class="max-w-2xl mx-auto py-8 px-4">
  <h2 class="text-3xl font-bold mb-6 text-center">Frequently Asked Questions</h2>
  <div>
    {faqs.map((faq, index) => (
      <div class="faq-item" key={index}>
        <div class="faq-question" onclick="toggleFAQ(event)">
          <span>{faq.question}</span>
          <Icon name="mdi:chevron-down" class="faq-icon" />
        </div>
        <div class="faq-answer">
          <p>{faq.answer}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<script>
  function toggleFAQ(event) {
    const item = event.currentTarget.parentElement;
    item.classList.toggle('open');
  }
</script>

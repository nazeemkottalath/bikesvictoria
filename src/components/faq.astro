---
import { Icon } from "astro-icon/components";

const faqs = [
  {
    question: "What are your rental hours?",
    answer: "We are open 24/7 for bike rentals."
  },
  {
    question: "How much does it cost?",
    answer: "Our basic single-gear bikes cost $15 per day."
  }
];
---

<main>
  <h1>Welcome to Bikes Victoria</h1>

  <section>
    <h2>Frequently Asked Questions</h2>
    {faqs.map((faq, index) => (
      <div key={index}>
        <h3>{faq.question}</h3>
        <p>{faq.answer}</p>
      </div>
    ))}
  </section>
</main>

---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "One day",
    price: "$15",
    popular: false,
    features: [
      "Free drop-off",
      "Free pick-up",
      "Free lock",
      "Free Helmet",
    ],
    button: {
      text: "Book Now",
      link: "/contact",
    },
  },
  {
    name: "Two days",
    price: "$28",
    popular: true,
    features: [
      "All Free Features",
      "Up to 20 users",
      "20 Custom domains",
      "Unlimited Collaborators",
    ],
    button: {
      text: "Book Now",
      link: "/contact",
    },
  },
  {
    name: "Three days",
    price: "$40",
    popular: false,
    features: [
      "All Pro Features",
      "Unlimited Custom domains",
      "99.99% Uptime SLA",
      "SAML & SSO Integration",
    ],
    button: {
      text: "Book Now",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        All rentals include drop-off, pick-up, helmet, lock, and a map. No surprises.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>

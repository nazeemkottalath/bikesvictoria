---
import Container from "@components/container.astro";
import Cta from "@components/cta.astro";
import Features from "@components/features.astro";
import Hero from "@components/hero.astro";
import Logos from "@components/logos.astro";
import Layout from "@layouts/Layout.astro";
import WallOfLove from "@components/walloflove.astro";
import Testimonial from "@components/testimonial.astro";
import Socialproofcontainer from "@components/socialproofcontainer.astro";
---

<Layout title="" canonicalUrl="https://bikesvictoria.com">
  <Container>
    <Hero />
  </Container>
  <Socialproofcontainer />
  <Container>
    <Features />
    <WallOfLove />
  </Container>
  

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "RentAction",
      "agent": {
        "@type": "Organization",
        "name": "Bikes Victoria"
      },
      "object": {
        "@type": "Product",
        "name": "Cheap Bike Rentals in Victoria BC",
        "description": "Rent bikes to explore Victoria, BC at the most affordable rates.",
        "image": "https://bikesvictoria.com/opengraph.jpg",
        "offers": {
          "@type": "Offer",
          "priceCurrency": "CAD",
          "price": "15",
          "url": "https://bikesvictoria.com",
          "availability": "InStock"
        }
      },
      "startTime": "2024-12-21T00:00:00",
      "endTime": "2024-12-21T23:59:59"
    }
  </script>
<script>
